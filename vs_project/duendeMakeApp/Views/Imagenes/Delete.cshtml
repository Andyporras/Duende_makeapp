@model duendeMakeApp.Models.Imagen

@{
    ViewData["Title"] = "Eliminar imagen";
}

@try
{
    @if (ViewBag.Usuario.Tipo.Tipo == "admin")
    {
        <h1>Eliminar</h1>

        <h3>¿Estás segura que deseas eliminar la imagen?</h3>
        <div>
            <h4>Imagen @Model.ImagenId</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Url)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Url)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" name="id" asp-for="ImagenId" />
                <input class="btn btn-danger" type="submit" value="Eliminar" />
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.ImagenId">Regresar</a>
            </form>

        </div>
    }
    else
    {
        <div class="alert alert-danger">Acceso denegado.</div>
    }
}
catch (Exception)
{
    <div class="alert alert-danger">Acceso denegado.</div>
}
