@model duendeMakeApp.Models.Producto

@{
    ViewData["Title"] = "Create";
}

<h1>Agregando producto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>


            <div class="form-group">
                @*<label asp-for="Estado" class="control-label"></label>*@
                <input role="switch" type="hidden" asp-for="Estado" class="form-control" value="True" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagenId" class="control-label"></label>
                <select asp-for="ImagenId" class ="form-control" asp-items="ViewBag.ImagenId"></select>
            </div>


            <div class="form-group">
                <label class="control-label">Seleccionar subcategorias:</label>
                <br>
                @foreach (var subs in ViewBag.Subcategoria)
                {
                    <label class="btn btn-secondary">
                        <input type="checkbox" name="SubIds" value="@subs.SubcategoriaId"> @subs.Nombre
                    </label>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Agregar producto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
