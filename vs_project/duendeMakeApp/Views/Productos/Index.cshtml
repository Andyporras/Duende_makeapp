    <h1>Productos</h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Categorías
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-area="" asp-controller="Labilaes" asp-action="Index">Tags</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Maquillaje" asp-action="Index">Catálogos</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Ropa" asp-action="Index">Paquetes</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Marcas" asp-action="Index">Categorías</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Cosas" asp-action="Index">Sub-categorías</a>
                    </div>
                </li>
            </ul>
                
            <form class="form-inline my-2 my-lg-0">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @try{
                    @if(ViewBag.Usuario.TipoId == 1)
                    {  
                        <a class="btn btn-primary" asp-action="Create">Agregar producto</a>
                    }
                }
                catch(Exception e){}
            </form>
        </div>
    </nav>

