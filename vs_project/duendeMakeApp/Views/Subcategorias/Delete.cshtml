@model duendeMakeApp.Models.Subcategoria

@{
    ViewData["Title"] = "Delete";
}
@try
{
    @if (ViewBag.Usuario.TipoId == 1)
    {
        <h1>Eliminar </h1>
        <h3>¿Esás seguro que deseas eliminar esta subcategoria?</h3>
        <div>
            <h4>Subcategoria @Model.SubcategoriaId</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="SubcategoriaId" name="id"/>
                <a class="btn btn-secundary" asp-action="Index">Regresar</a>
                <input type="submit" value="Delete" class="btn btn-danger" /> |
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Acceso denegado</div>
    }
}
catch (Exception ex)
{
    <div class="alert alert-danger">Acceso denegado.</div>
    @ex
}