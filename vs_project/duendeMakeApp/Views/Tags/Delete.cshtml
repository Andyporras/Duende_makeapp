@model duendeMakeApp.Models.Tag

@{
    ViewData["Title"] = "Eliminar tag";
}

@try
{
    @if (ViewBag.Usuario.Tipo.Tipo == "admin")
    {
        <h1>Eliminar</h1>

        <h3>¿Estás segura que deseas eliminar este tag?</h3>
        <div>
            <h4>Tag @Model.TagId</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="TagId" name="id" />
                <a class="btn btn-primary" asp-action="Index">Regresar</a>
                <input type="submit" value="Eliminar" class="btn btn-danger"/>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Acceso denegado.</div>
    }
}
catch (Exception ex)
{
    <div class="alert alert-danger">Acceso denegado.</div>
    @ex
}
