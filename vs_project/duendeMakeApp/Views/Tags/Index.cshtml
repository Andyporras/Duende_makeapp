@model IEnumerable<duendeMakeApp.Models.Tag>

@{
    ViewData["Title"] = "Index";
}

@*<div class="alert alert-info">usuario: @ViewBag.Usuario.TipoID</div> *@

<h1>Index</h1>

<p>
    @try
    {
        @* <div class="alert alert-info">usuario: @ViewBag.usuario.TipoId</div> *@
        @if (ViewBag.usuario.TipoId == 1)
        {
            <a asp-action="Create">Create New</a>
        }
    }
    catch (Exception e)
    {
        @* no se muestra el crear *@
    }
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TagId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TagId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TagId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
