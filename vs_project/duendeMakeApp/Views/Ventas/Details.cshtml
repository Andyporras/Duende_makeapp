@model duendeMakeApp.Models.Venta

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle</h1>

<div>
    <h4>Venta</h4>
    <hr />
    <dl class="row">
        @foreach (var item in Model.Carrito.Productos)
        {
            <dd class = "col-sm-10">
                <p>
                    Nombre Producto:
                </p>
                @Html.DisplayFor(modelItem => item.Nombre)
            </dd>
            <dd class="col-sm-10">
                <p>
                    Precio:
                </p>
                @Html.DisplayFor(modelItem => item.Precio)
            </dd>
            <img class="card-img-top"
                 src="@item.Imagen.Url"
                 data-holder-rendered="true">
            break;
        }
    </dl>
</div>
<div>
    @* <a asp-action="Edit" asp-route-id="@Model?.VentaId">Edit</a> | *@
    <a class="btn btn-primary" asp-action="Index">Regresar</a>
</div>
