@model IEnumerable<Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdVenta)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPedido)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                <a asp-action="Aprobar" asp-route-id="@item.IdVenta">Aprobar pedido</a> |
                <a asp-action="Cancelar" asp-route-id="@item.IdVenta">Cancelar pedido</a>
            </td>

        </tr>
}
    </tbody>
</table>
